<!DOCTYPE html>
<html>
<%- include( "partials/head") %>
<body>
  <%- include( "partials/nav_bar") %>
  <form action="/sign_in" class="column is-offset-5" method="POST" >
    <div class="field column">
      <p class="control has-icons-left">
        <input class="input is-quarterwidth" type="text" name="username" placeholder="Username" value="jhallman5" />
        <span class="icon is-small is-left">
          <i class="fa fa-user"></i>
        </span>
      </p>
    </div>
    <div class="field column">
      <p class="control has-icons-left ">
        <input class="input is-quarterwidth" type="text" name="email" placeholder="Email" />
        <span class="icon is-small is-left">
          <i class="fa fa-envelope"></i>
        </span>
      </p>
    </div>
    <div class="field column">
      <p class="control has-icons-left ">
        <input class="input is-quarterwidth" type="text" name="password" placeholder="Password" value="test" />
        <span class="icon is-small is-left">
          <i class="fa fa-lock"></i>
        </span>
      </p>
    </div>
    <div class="field is-grouped">
      <p class="control">
        <input class=" button is-success is-hovered" type="submit" value="Sign In"/>
      </p>
      <p class="control">
        <a class="button  is-info"  href="/sign_up"/>Sign Up</a>
      </p>
    </div>
  </form>
</body>
</html>
